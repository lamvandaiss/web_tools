const app = require('./app'); // Import ứng dụng Express từ app.js

const PORT = process.env.PORT || 3000; // Lấy PORT từ .env hoặc mặc định là 3000

app.listen(PORT, () => {
  console.log(`Server is running on port ${PORT}`);
  console.log(`Access APIs via: http://localhost:${PORT}/api/<your_resource>`);
